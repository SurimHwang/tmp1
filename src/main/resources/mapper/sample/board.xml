<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tmp.dao.BoardDAO">

	<select id="selectAll" resultType="com.tmp.dto.BoardDTO">
		select 
			*
		from tmp_board
	</select>
	
	<select id="selectOne" parameterType="String" resultType="com.tmp.dto.BoardDTO">
		select 
			*
		from tmp_board
		where bdTitle= #{value}
	</select>
	
	<insert id="insertBoard" parameterType="com.tmp.dto.BoardDTO">
	insert into tmp_board(
		bdName
		, bdTitle
		, bdContent
		, bdDate
	)
	values(
	#{bdName}
	, #{bdTitle}
	, #{bdContent}
	, now()
	)
	</insert>
	
	<delete id="deleteBoard" parameterType="String">
	delete 
	from tmp_board
	where bdTitle="${value}"
	</delete>
	
	<update id="updateBoard" parameterType="com.tmp.dto.BoardDTO">
	update tmp_board
	set bdContent=#{bdContent}
	where bdTitle=#{bdTitle}
	</update>

</mapper>